<Page x:ConnectionId='1'
    x:Class="radialdemo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:radialdemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
    Background="White">

    <Grid x:ConnectionId='2' Name="root" Width="500" Height="500">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Canvas x:ConnectionId='3' Name="c1" HorizontalAlignment="Center" VerticalAlignment="Center"                         >
                <Rectangle x:ConnectionId='4' Name="r1" IsHitTestVisible="True" Fill="Transparent" Grid.Column="0" Grid.Row="0" Width="500" Height="500"></Rectangle>
                <Rectangle x:ConnectionId='5' Name="r2" IsHitTestVisible="True" Fill="Transparent" Grid.Column="0" Grid.Row="0" Width="500" Height="500"></Rectangle>
            </Canvas>
        </Grid>
    </Grid>
</Page>

